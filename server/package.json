{
  "name": "sns_deepfake",
  "version": "1.0.0",
  "description": "SNS Deepfake",
  "main": "server.js",
  "repository": "https://github.com/vu-161200/SNS-Deepfake",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "sync": "yarn install --frozen-lockfile",
    "test": "jest",
    "test:watch": "jest --watchAll",
    "lint": "eslint \"{src,test}/**/*.{js,ts}\"",
    "lint:fix": "eslint \"{src,test}/**/*.{js,ts}\" --fix",
    "prettier": "prettier --check \"{src,test}/**/*.{js,ts}\"",
    "prettier:fix": "prettier --write \"{src,test}/**/*.{js,ts}\"",
    "clean": "rm -rf build && mkdir build",
    "build": "yarn clean && yarn build-babel",
    "build-babel": "babel ./src -d ./build/src --minified --presets @babel/preset-env",
    "production": "yarn build && node ./build/src/server.js",
    "dev": "nodemon --exec babel-node ./src/server.js",
    "start": "node build/src/server.js",
    "seed": "node ./src/seeders/index.js",
    "prepare": "cd .. && husky"
  },
  "dependencies": {
    "@babel/runtime": "^7.24.1",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "connect-timeout": "^1.9.0",
    "cors": "^2.8.5",
    "dayjs": "^1.11.10",
    "dotenv": "^16.4.5",
    "express": "^4.19.1",
    "firebase-admin": "^12.0.0",
    "helmet": "^7.1.0",
    "ioredis": "^5.3.2",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.3",
    "nodemailer": "^6.9.13",
    "pg": "^8.11.3",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.37.1",
    "socket.io": "^4.7.5",
    "vercel": "^34.2.0",
    "winston": "^3.12.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.24.1",
    "@babel/core": "^7.24.3",
    "@babel/eslint-parser": "^7.24.1",
    "@babel/node": "^7.23.9",
    "@babel/plugin-transform-runtime": "^7.24.3",
    "@babel/preset-env": "^7.24.3",
    "@faker-js/faker": "^8.4.1",
    "babel-jest": "^29.7.0",
    "babel-plugin-module-resolver": "^5.0.0",
    "eslint": "^7.32.0 || ^8.2.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.2",
    "nodemon": "^3.1.0",
    "prettier": "^3.2.5",
    "supertest": "^6.3.4"
  },
  "imports": {
    "##/*": "./src/*.js",
    "#configs": "./src/configs/index.js",
    "#constants": "./src/constants/index.js",
    "#dbs": "./src/dbs/index.js",
    "#middlewares": "./src/middlewares/index.js",
    "#modules": "./src/modules/index.js",
    "#utils": "./src/utils/index.js"
  },
  "engines": {
    "node": ">=20.0.0",
    "yarn": ">=1.20.0",
    "npm": "please-use-yarn"
  },
  "husky": {
    "hooks": {
      "pre-commit": "cd server && yarn lint-staged"
    }
  }
}
